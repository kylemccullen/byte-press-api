@model API.Core.Models.Email.PasswordResetCodeViewModel

@{
    Layout = "API.Core.Views.Email._Layout";
}

<h5 class="card-title text-center">Password Reset Request</h5>
<p class="card-text">Hello @Model.Name,</p>
<p class="card-text">We received a request to reset your password. If you requested this change, please click the button below to reset your password:</p>
<div class="text-center">
    <a href="@Model.ResetLink" target="_blank" class="btn btn-primary btn-lg">Reset Password</a>
    <p></p>
</div>
<p class="card-text mt-3">If you did not request a password reset, please ignore this email. Your password will remain unchanged.</p>
<p class="text-muted text-center">Best regards, <br> @Model.CompanyName</p>
